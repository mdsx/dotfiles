menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = 
menu-0-2-exec = i3lock-fancy -p -g -t -f SFNS-Display

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/pkg]
type = custom/script
interval = 1200
format = <label>
format-padding = 2
format-margin = 1
format-background = #D4665D
format-foreground = ${colors.background}
label = "%output:0:30%"
;exec = /usr/local/bin/pkg.sh
exec = ~/.config/polybar/scripts/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/previous]
