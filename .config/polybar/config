format-text = <label>
label = 
exec = echo label
click-left = exec playerctl previous
format-foreground = #eeeeee

[module/next]
format-background = #303030
format-padding = 2
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = exec playerctl next
format-foreground = #eeeeee

[module/spotipy]
format-background = #303030
format-padding = 2
type = custom/script
;exec =  python3 ~/code/py_scripts/spoti.py
exec = python3 ~/.config/polybar/scripts/spoti.py
exec-if = pgrep spotify > /dev/null
interval = 0.01
click-left = playerctl -p spotify play-pause

[module/playpause]
format-background = #303030
