# ----------------------
# wm independent hotkeys
# ----------------------

# terminal emulator
super + Return
	termite

super + shift + Return
	termite -d $(pwd)

# rofi drun
super + p
	rofi -show drun -font "Andale Mono 12" -scrollbar-width 2 -bw 20 \
	-separator-style solid -width 100 -location 1 -lines 10 -yoffset -2

# rofi switch window
alt + Tab
	rofi -show window -font "Andale Mono 12" -scrollbar-width 2 -bw 20 \
	-separator-style solid -width 100 -location 1 -lines 10 -yoffset -2

# xfce appmenu
super + @space
	xfce4-popup-whiskermenu

# thunar
super + f
	thunar

# fancy lock
super + l
	i3lock-fancy -pgt '' -f SFNS-Display && systemctl suspend

# hiddle dee hiddle dum
super + h
	~/Downloads/hideIt.sh/hideIt.sh -H -N polybar-systray_eDP1 -s 7

# Screenshot via Print Screen
Print
	xfce4-screenshooter
#	scrot '%m-%d-%Y.png' -e 'mv $f ~/Pictures/Screenshots/'

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


# ----------
# voume keys
# ----------

XF86AudioMute
	amixer set Master toggle ; pkill not-stat ; not-stat Mt

XF86AudioLowerVolume
	amixer set Master 2%- ; pkill not-stat ; not-stat Vl

XF86AudioRaiseVolume
	amixer set Master 2%+ ; pkill not-stat ; not-stat Vl

super + XF86AudioRaiseVolume
	amixer set Master 1%+ ; pkill not-stat ; not-stat Vl

super + XF86AudioLowerVolume
	amixer set Master 1%- ; pkill not-stat ; not-stat Vl


# ---------------
# brightness keys
# ---------------

XF86MonBrightnessDown
	xbacklight -dec 5

XF86MonBrightnessUp
	xbacklight -inc 5


# -------------
# bspwm hotkeys
# -------------

# reload bspwmrc
super + b
	/home/ms/.config/bspwm/bspwmrc

# close window
super + q
	bspc node -c

# quit bspwm normally
super + alt + Escape
	bspc quit


# -------------
# function keys
# -------------

# rotate windows
super + F1
	bspc node @/ -R 90

# circulate windows
super + F2
	bspc node @/ -C forward

# flip windows horizontal
super + F3
	bspc node @/ -F horizontal

# flip windows vertical
super + F4
	bspc node @/ -F vertical

# set the window state
{F9,F10,F11,F12}
	bspc node -t {floating,tiled,pseudo_tiled,fullscreen}


# ----------
# focus/swap
# ----------

# focus the next/previous node
alt + {Up,Down}
	bspc node -f {prev,next}.local.!above

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

alt + bracket{left,right}
    bspc desktop -f {prev,next}

# swap the current node and the biggest node
super + g
    bspc node -s biggest.local

# toggle monocle
super + m
    bspc desktop -l next

# move focused window to the next workspace and then switch to that workspace
super + {_,shift +} Tab
    id=$(bspc query --nodes --node); bspc node --to-desktop {next,prev}; \
	bspc desktop --focus next; bspc node --focus ${id}

super + {_,shift +} grave
	id=$(bspc query --nodes --node); bspc node --to-desktop {next,prev}

# Hide/Unhide currently active window
super + u
    bspc node @/ -g hidden

# Open/Close empty nodes (receptacles)
super + alt + space
	{for i in $(bspc query -N -n .leaf.!window.local); do bspc node $i -k; done}

super + {Left,Down,Up,Right}
    smartsplit; bspc node @/ -p {west, south, north, east} -i
	# @/ -p east, @/2 -p north


