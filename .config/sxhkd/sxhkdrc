# ----------------------
# wm independent hotkeys
# ----------------------

# terminal emulator
super + Return
	termite

# rofi drun
super + p
	rofi -show drun -font "Source Code Pro 12" -scrollbar-width 2 -bw 20 -separator-style solid -width 100 -location 1 -lines 10 -yoffset -2

# rofi switch window
alt + Tab
	rofi -show window -font "Source Code Pro 12" -scrollbar-width 2 -bw 20 -separator-style solid -width 100 -location 1 -lines 10 -yoffset -2

# xfce appmenu
super + @space
	xfce4-popup-whiskermenu

# thunar
super + f
	thunar

# fancy lock
super + l
	i3lock-fancy -pgt '' -f SFNS-Display && systemctl suspend

# hiddle dee hiddle dum
super + h
	~/Downloads/hideIt.sh/hideIt.sh -H -N polybar-systray_eDP1 -s 7

# Screenshot via Print Screen
Print
	scrot '%m-%d-%Y.png' -e 'mv $f ~/Pictures/Screenshots/'

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


# ----------
# voume keys
# ----------

XF86AudioMute
	amixer set Master toggle ; pkill not-stat ; not-stat Mt

XF86AudioLowerVolume
	amixer set Master 2%- ; pkill not-stat ; not-stat Vl

XF86AudioRaiseVolume
	amixer set Master 2%+ ; pkill not-stat ; not-stat Vl

super + XF86AudioRaiseVolume
	amixer set Master 1%+ ; pkill not-stat ; not-stat Vl

super + XF86AudioLowerVolume
	amixer set Master 1%- ; pkill not-stat ; not-stat Vl


# ---------------
# brightness keys
# ---------------

XF86MonBrightnessDown
	xbacklight -dec 5

XF86MonBrightnessUp
	xbacklight -inc 5


# -------------
# bspwm hotkeys
# -------------

# reload bspwmrc
super + b
	/home/ms/.config/bspwm/bspwmrc

# close window
super + q
	bspc node -c

# quit bspwm normally
super + alt + Escape
	bspc quit


# -------------
# function keys
# -------------

# rotate windows
alt + F1
	bspc node @/ -R 90

# circulate windows
alt + F2
	bspc node @/ -C forward

# flip windows horizontal
alt + F3
	bspc node @/ -F horizontal

# flip windows vertical
alt + F4
	bspc node @/ -F vertical

# set the window state
{F9,F10,F11,F12}
	bspc node -t {floating,tiled,pseudo_tiled,fullscreen}


# ----------
# focus/swap
# ----------

# focus the next/previous node
alt + {Up,Down}
	bspc node -f {prev,next}.local.!above

# focus the next/previous desktop
super + alt + {Left,Right}
	bspc desktop -f {prev,next}
